<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:minHeight="44dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_topbar_left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_topbar_mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.05"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/tv_topbar_subTitle"
        app:layout_constraintLeft_toRightOf="@id/img_topbar_left"
        app:layout_constraintRight_toLeftOf="@+id/tv_topbar_functionTitle"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="123123" />

    <TextView
        android:id="@+id/tv_topbar_functionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:drawableRight="@drawable/arrow_down_gray"
        android:drawablePadding="2dp"
        android:letterSpacing="0.05"
        android:maxLines="1"
        android:textColor="#666666"
        android:textSize="17dp"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_topbar_mainTitle"
        app:layout_constraintLeft_toRightOf="@id/tv_topbar_mainTitle"
        app:layout_constraintRight_toLeftOf="@id/img_topbar_right"
        tools:text="123123" />


    <TextView
        android:id="@+id/tv_topbar_subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:letterSpacing="0.05"
        android:maxLines="1"
        android:textColor="#999999"
        android:textSize="11dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_topbar_left"
        app:layout_constraintRight_toLeftOf="@id/img_topbar_right"
        app:layout_constraintTop_toBottomOf="@id/tv_topbar_mainTitle" />
    <ImageView
        android:id="@+id/img_topbar_right_2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerInside"
        app:layout_constraintRight_toLeftOf="@+id/img_topbar_right"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_topbar_right"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerInside"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_topbar_right"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/text_3"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/division"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>