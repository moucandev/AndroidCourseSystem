<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/empty_normal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/img_emptyView_head"
            android:layout_width="149dp"
            android:layout_height="134dp"
            android:scaleType="centerInside"
            android:src="@mipmap/emptyview_normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_emptyView_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="106dp"
            android:textSize="16dp"
            android:textColor="@color/text_9"
            android:text="@string/noContent"
            app:layout_constraintTop_toBottomOf="@+id/img_emptyView_head"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
